.excursionForm
  max-width: $container-lg - 20px
  margin: 0 auto
  background: url(bg.png) 33px
  padding: 5px
  color: #ffffff

  &__inner
    background: #222764
    padding: 44px 62px 44px 40px
    display: flex
    align-items: center
    justify-content: space-between
    @media (max-width: $breakpoint-lg)
      flex-direction: column
    @media (max-width: $breakpoint-sm)
      padding: 32px 10px 30px

  &__title
    visibility: hidden
    display: none
    font-size: 32px
    line-height: 30px
    font-weight: 800
    margin-bottom: 7px
    @media (max-width: $breakpoint-lg)
      display: block

  &__text
    visibility: hidden
    font-size: 24px
    line-height: 30px
    margin-right: 74px
    flex-shrink 0

    @media (max-width: $breakpoint-lg)
      text-align: center
      margin-right: 0
      margin-bottom: 29px
      br
        display: none

    span
      font-weight: 800
      @media (max-width: $breakpoint-lg)
        display: none

  &__right
    flex: 1
    @media (max-width: $breakpoint-md)
      max-width: 370px
      width: 100%

  &__form
    visibility: hidden

  &__row
    display: flex
    align-items: center
    @media (max-width: $breakpoint-md)
      flex-direction: column

    & > *
      flex: 1
      margin-right: 20px
      @media (max-width: $breakpoint-md)
        margin-right: 0
        margin-bottom: 9px
        width: 100%

      &:last-child
        margin-right: 0;
        @media (max-width: $breakpoint-md)
          margin-bottom: 0
          margin-top: 12px

  &__row + &__row
    margin-top: 20px

  &__input
    border: 1px solid #E2AF5F
    border-radius: 2px
    font-size: 15px
    line-height: 30px
    padding: 10px 17px 8px
    display: block;
    width: 100%

    &::-webkit-input-placeholder {
      color: #fff;
    }

    &::-moz-placeholder {
      color: #fff;
    }

    /* Firefox 19+ */

    &:-moz-placeholder {
      color: #fff;
    }

    /* Firefox 18- */

    &:-ms-input-placeholder {
      color: #fff;
    }

  &__submit
    background: #dbb06b
    border-radius: 2px
    padding: 20px 22px 15px
    font-size: 15px
    line-height: 1
    @media (max-width: $breakpoint-md)
      width: 100%
