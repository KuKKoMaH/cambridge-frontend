.features
  padding: 76px 0 72px
  overflow: hidden
  @media (max-width: $breakpoint-sm)
    padding: 47px 0 58px

  &__title
    text-align: center
    font-size: 56px
    line-height: 30px
    margin-bottom: 70px
    font-weight: 800
    @media (max-width: $breakpoint-sm)
      text-align: left
      padding: 0 20px
      margin-bottom: 62px
      font-size: 40px
      line-height: 1

    &:after
      content: ''
      display: block
      position: absolute
      width: 50px
      height: 7px
      background: #dbb06b
      margin-top: 29px
      left: 50%
      margin-left: -25px
      @media (max-width: $breakpoint-sm)
        left: 20px
        margin-left: 0

  &__subheader
    text-align: center
    color: #505050
    font-size: 19px
    line-height: 25px
    margin: 0 auto 82px
    width: 100%
    //max-width: 800px
    @media (max-width: $breakpoint-sm)
      text-align: left
      padding: 0 20px
      margin-bottom: 13px

  &__items
    display: flex
    flex-wrap: wrap
    @media (max-width: $breakpoint-sm)
      display: block

  &__item
    width: 50%
    position: relative
    padding: 0 90px 0 200px
    margin-bottom: 60px
    @media (max-width: $breakpoint-sm)
      width: 100%
      padding: 0
      margin: 0

  &__image
    position: absolute
    left: 0
    @media (max-width: $breakpoint-sm)
      position: static
      display: block
      width: 100%
      margin-bottom: 35px

  &__header
    font-size: 19px
    line-height: 25px
    font-weight: 900
    margin-bottom: 11px
    color: #484848

  &__text
    font-size: 17px
    line-height: 25px
    color: #484848

  &__nav
    display: none
    @media (max-width: $breakpoint-sm)
      display: flex
      align-items: center
      justify-content: center
      margin: 60px 0 0

  &__dot
    position: relative
    width: 26px
    height: 26px
    background: transparent
    margin: 0 8px
    anim()

    &:before, &:after
      content: ''
      display: block
      position: absolute
      transform: translate(-50%, -50%)
      top: 50%
      left: 50%
      border-radius: 50%
      anim()

    &:before
      width: 10px
      height: 10px

    &:after
      width: 12px
      height: 12px
      background: #d7d7d7

    &.tns-nav-active
      &:before
        width: 26px
        height: 26px
        background: #dea751

      &:after
        width: 10px
        height: 10px
        background: #fff
