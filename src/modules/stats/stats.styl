.stats
  padding: 96px 0 103px;
  @media (max-width: $breakpoint-sm)
    padding: 44px 0 63px

  &__title
    text-align: center
    font-size: 54px
    line-height: 64px
    font-weight: 800
    margin-bottom: 138px
    @media (max-width: $breakpoint-sm)
      font-size: 38px
      line-height: 49px
      text-align: left
      padding: 0 20px
      margin-bottom: 61px

    &:after
      content: ''
      display: block
      position: absolute
      width: 50px
      height: 7px
      background: #dbb06c
      left: 50%
      margin-left: -25px
      margin-top: 20px
      @media (max-width: $breakpoint-sm)
        left: 20px
        margin-left: 0

  &__slider
    max-width: $breakpoint-lg
    width: 100%
    margin: 0 auto
    @media (max-width: $breakpoint-sm)
      visibility: hidden

  &__items
    justify-content: space-between
    flex: 1
    display: flex
    @media (max-width: $breakpoint-sm)
      display: block

  &__item
    visibility: hidden
    flex: 1
    max-width: 265px
    padding-top: 13px
    @media (max-width: $breakpoint-sm)
      visibility: visible
      max-width: 100%
      margin: 0 auto
      padding: 13px 20px 0
      display: none
      &:first-child
        display: block

  &__chart
    margin: 0 auto
    position: relative
    background: url(images/sprite-stats-empty.svg)

  &__round
    width: 100%
    height: 100%
    margin: 0
    transform: rotate(-90deg)
    background: transparent
    border-radius: 50%
    display: block

    circle
      fill: transparent;
      stroke: #dbb06c;
      stroke-width: 90;
      transform: rotateY(-180deg) rotateZ(180deg);
      transform-origin: 50% 50%;
      //display: none
      //stroke-dasharray: 0 0

      &.stats--inited
        //display: block
        transition: stroke-dasharray 1.5s ease-out

  &__number
    position: absolute
    font-size: 39px
    font-weight: 800
    color: #222568
    top: -13px
    left: 110px

  &__text
    font-size: 17px
    line-height: 22px
    color: #505050
    text-align: center
    margin-top: 52px

  &__icon
    background: url(images/sprite-prize.svg)
    margin: 0 auto 50px

  &__subicon
    font-size: 76px
    line-height: 30px
    font-weight: 800
    color: #222568
    text-align: center

  &__nav
    display: none
    @media (max-width: $breakpoint-sm)
      display: flex
      align-items: center
      justify-content: center
      margin: 35px 0 0

  &__dot
    position: relative
    width: 26px
    height: 26px
    background: transparent
    margin: 0 8px
    anim()

    &:before, &:after
      content: ''
      display: block
      position: absolute
      transform: translate(-50%, -50%)
      top: 50%
      left: 50%
      border-radius: 50%
      anim()

    &:before
      width: 10px
      height: 10px

    &:after
      width: 12px
      height: 12px
      background: #d7d7d7

    &.tns-nav-active
      &:before
        width: 26px
        height: 26px
        background: #dea751

      &:after
        width: 10px
        height: 10px
        background: #fff

  &__triangle
    margin-top: -100px
    left: 50%
    margin-left: 777px
    border-width: 0 0 108px 104px;
    border-color: transparent transparent #222764 transparent