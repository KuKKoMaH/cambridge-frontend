.excursion
  //visibility: hidden;
  display: flex
  padding-top: 90px
  padding-bottom: 79px
  @media (max-width: $breakpoint-sm)
    flex-direction: column
    padding-top: 44px
    padding-bottom: 11px
    br
      display: none

  &__title
    font-size: 54px
    font-weight: 800
    line-height: 47px
    margin-bottom: 27px
    @media (max-width: $breakpoint-sm)
      text-align: center
      font-size: 37px
      line-height: 47px
      margin-bottom: 10px

  &__subtitle
    font-size: 20px
    line-height: 28px
    color: #4a4a4a
    @media (max-width: $breakpoint-sm)
      margin-bottom: 42px

  &__bullets
    flex: 1
    display: flex
    justify-content: space-around
    align-items: center
    @media (max-width: $breakpoint-sm)
      flex-direction: column
      align-items: stretch

  &__bullet
    font-size: 17px
    line-height: 26px
    color: #4a4a4a
    margin-bottom: 42px
    padding-left: 96px
    position: relative
    min-height 47px
    @media (max-width: $breakpoint-sm)
      margin-bottom: 40px
      padding-left: 80px

    &:before
      content: ''
      display: block
      position: absolute
      background: url(images/sprite-bullet.svg)
      left: 0
      top: 0

    &:last-child
      margin-bottom: 0
      @media (max-width: $breakpoint-sm)
        margin-bottom: 40px