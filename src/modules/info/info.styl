.info
  @media (max-width: $breakpoint-sm)
    padding: 0 20px
  &__text
    font-size: 19px
    line-height: 25px
    color: #484848
    max-width:760px
    margin: 0 auto
    text-align: center

  &__button
    border: 1px solid #E2AF5F
    font-size: 16px
    line-height: 27px
    font-weight: 800
    display: block
    margin: 0 auto
    padding: 19px 44px
    border-radius: 1px

  &__text + &__button
    margin-top: 68px