.prices
  padding: 0 0 69px
  background: #f0f0f0
  overflow: hidden
  @media (max-width: $breakpoint-sm)
    padding-bottom: 33px

  &__top
    padding: 93px 0 76px
    background: #ffffff
    @media (max-width: $breakpoint-sm)
      padding: 38px 0 163px

  &__title
    font-size: 54px
    line-height: 64px
    text-align: center
    font-weight: 800
    margin-bottom: 12px
    @media (max-width: $breakpoint-sm)
      text-align: left
      padding: 0 20px

    &:after
      content:''
      display: block
      position: absolute
      background: #dbb06c
      width: 50px
      height: 7px
      left: 50%
      margin-left: -25px
      margin-top: 58px
      @media (max-width: $breakpoint-sm)
        left: 20px
        margin-left: 0
        margin-top: 20px

  &__subtitle
    font-size: 21px
    text-align: center
    margin-bottom: 93px
    @media (max-width: $breakpoint-sm)
      display: none


  &__slider
    margin-top: -75px
    margin-bottom: 69px
    @media (max-width: $breakpoint-sm)
      visibility: hidden

  &__slides
    display: flex
    align-items: flex-start
    justify-content: center
    margin: 0 auto 0
    @media (max-width: $breakpoint-sm)
      display: block

  &__slide
    visibility: hidden
    flex: 1
    width: 100%
    max-width: 340px
    margin: 0 7px
    @media (max-width: $breakpoint-sm)
      visibility: visible
      max-width: none
      margin: 0
      padding: 0 20px
      display: none
      &:first-child
        display: block

  &__header
    background: #dbb06b
    height: 75px
    color: #ffffff
    font-size: 17px
    font-weight: 800
    padding: 0 39px
    display: flex
    align-items: center
    @media (max-width: $breakpoint-lg) and (min-width: $breakpoint-sm + 1)
      text-align: center
      padding: 0 8px

  &__row
    position: relative
    height: 92px
    background: #ffffff
    border-bottom: 1px solid #c8c8c8
    display: flex
    justify-content: center
    align-items: center
    @media (max-width: $breakpoint-lg) and (min-width: $breakpoint-sm + 1)
      flex-direction: column


    &:last-child
      border-bottom: 0

    &:before, &:after
      content: ''
      display: block
      position: absolute
      width: 24px
      height: 24px
      background: #f0f0f0
      border-radius: 50%
      top: 50%
      transform translateY(-50%)

    &:before
      left: 0
      margin-left: -12px
    &:after
      right: 0
      margin-right: -12px

  &__price
    font-size: 20px
    font-weight: 800
    width: 120px
    @media (max-width: $breakpoint-lg) and (min-width: $breakpoint-sm + 1)
      width: auto

    b
      color: #e65252

  &__period
    font-size: 20px
    color: #505050
    width: 70px
    @media (max-width: $breakpoint-lg) and (min-width: $breakpoint-sm + 1)
      width: auto

  &__nav
    display: flex
    align-items: center
    justify-content: center
    margin: 35px 0 55px
    @media (min-width: $breakpoint-sm + 1)
      display: none


  &__dot
    position: relative
    width: 26px
    height: 26px
    background: transparent
    margin: 0 8px
    anim()

    &:before, &:after
      content: ''
      display: block
      position: absolute
      transform: translate(-50%, -50%)
      top: 50%
      left: 50%
      border-radius: 50%
      anim()

    &:before
      width: 10px
      height: 10px

    &:after
      width: 12px
      height: 12px
      background: #d7d7d7

    &.tns-nav-active
      &:before
        width: 26px
        height: 26px
        background: #dea751

      &:after
        width: 10px
        height: 10px
        background: #fff


  &__info
    justify-content: space-around
    margin-bottom: 67px
    @media (max-width: $breakpoint-sm)
      margin-bottom: 20px

  &__bullet
    font-size: 17px
    line-height: 27px
    margin-bottom: 26px
    @media (max-width: $breakpoint-sm)
      padding-left: 30px
      padding-right: 10px

      br
        display: none

    &:last-child
      margin-bottom: 0
      @media (max-width: $breakpoint-sm)
        margin-bottom: 26px

    &:before
      content: ''
      display: block
      position: absolute
      background: #dbb06b
      width: 5px
      height: 5px
      border-radius: 50%
      margin-top: 10px
      margin-left: -20px

  &__button
    border: 1px solid #dbb06b
    border-radius: 1px
    margin: 0 auto
    width: 300px
    text-align: center
    display: block
    font-size: 16px
    font-weight: 800
    padding: 23px 0 18px
