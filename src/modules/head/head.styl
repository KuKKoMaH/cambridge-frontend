.head
  min-height: 200px
  background: url(bg.jpg) 50% 0 no-repeat
  background-size: cover
  color: #ffffff
  overflow: hidden
  padding: 100px 0 48px

  @media (max-width: $breakpoint-sm - 1)
    background-image: url(bg-mobile.jpg)
    padding: 250px 0px 23px

    br
      display: none

  &__logo
    position: absolute
    background: url(logo.png) 50% 50% no-repeat
    background-size: cover
    width: 119px
    height: 119px
    top: 65px
    right: 50%
    margin-right: 760px
    @media (max-width: $breakpoint-sm - 1)
      right: auto
      top: 20px
      width: 102px
      height: 102px
      left: 12px

  &__note
    font-size: 17px
    line-height: 22px
    margin-bottom: 50px

    @media (max-width: $breakpoint-sm - 1)
      position: absolute
      left: 127px
      top: 23px
      max-width: 160px
      font-size: 15px
      line-height: 18px

  &__title
    font-size: 56px
    line-height: 54px
    font-weight: 800
    margin-bottom: 38px

    @media (max-width: $breakpoint-sm - 1)
      font-size: 46px
      line-height: 42px
      margin-bottom: 31px

    span
      position: relative
      display: inline-block
      z-index: 1

      &:after
        content: ''
        display: block
        position: absolute
        width: 100%
        height: 7px
        background: #ce3934;
        bottom: -4px
        z-index: -1

  &__subtitle
    font-size: 21px
    line-height: 33px
    margin-bottom: 51px

    @media (max-width: $breakpoint-sm - 1)
      font-size: 18px
      line-height: 26px
      margin-bottom: 32px

  &__license
    position: relative
    font-size: 14px
    line-height: 19px
    padding-left: 51px
    min-height: 41px
    @media (max-width: $breakpoint-sm - 1)
      font-size: 14px
      line-height: 19px

    &:before
      content: ''
      display: block
      position: absolute
      left: 0
      top: 0
      background: url(images/sprite-license.svg)

  &__triangle
    left: 50%
    margin-left: -749px
    border-width: 61px 0 0 63px
    border-color: transparent transparent transparent #ce3934
